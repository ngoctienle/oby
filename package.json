{
  "name": "freelance-ecommerce",
  "version": "0.1.0",
  "description": "An Ecommerce Build with NextJS TypeScript & Back-End with Mangento 2",
  "keywords": [
    "NextJS",
    "Mangento2",
    "TypeScript",
    "Husky",
    "Docker",
    "Tailwindcss",
    "SEO"
  ],
  "author": "ngoctienle<hi@bravemind.io>",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "postinstall": "husky install",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier -c \"./.prettierrc.js\" -w",
    "commit": "cz"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.13",
    "@heroicons/react": "^2.0.16",
    "@tanstack/react-query": "^4.24.10",
    "axios": "^1.3.4",
    "clsx": "^1.2.1",
    "next": "13.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hot-toast": "^2.4.0",
    "swiper": "8.4.7"
  },
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tanstack/react-query-devtools": "^4.24.10",
    "@trivago/prettier-plugin-sort-imports": "^4.1.0",
    "@types/node": "^18.14.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "5.0.0",
    "autoprefixer": "^10.4.13",
    "commitizen": "^4.3.0",
    "csstype": "3.0.10",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.34.0",
    "eslint-config-next": "^13.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "tailwind-merge": "^1.10.0",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,mdx,md,css}": [
      "yarn format \"./src/**/*.{js,jsx,ts,tsx,mdx,md,css}\""
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "browserslist": {
    "production": [
      ">0.01%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      ">0.01%",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
